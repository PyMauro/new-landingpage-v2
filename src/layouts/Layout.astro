---
import BaseUiNavbar from "../components/vue/_baseUi/navbar.astro";
import StructurePaddingContainer from "../components/vue/_structure/paddingContainer.vue";
import "../styles/global.css";
import Preloader from '@components/vue/Brand/Preloader.vue';
interface Props {
  title: string;
  mainBgColor?: string;
}


const {title,mainBgColor} = Astro.props;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class:list={['relative', mainBgColor ? mainBgColor : 'bg-black']}>
      <Preloader client:only="vue"/> 
      <div id="preloader-fallback" class="absolute left-0 top-0 w-full h-[200vh] z-20 bg-black"></div> 
      <StructurePaddingContainer>
      <header>
        <BaseUiNavbar></BaseUiNavbar>
      </header>
      </StructurePaddingContainer>
      <!-- <div class="absolute w-full h-full bg-noise left-0 top-0 opacity-40">
      </div> -->
      <main class="add-texture overflow-x-hidden">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
        .bg-noise {
        background-image: url("../assets/noise.svg");
        background-repeat: repeat;
        background-size: auto;
      }
</style>
