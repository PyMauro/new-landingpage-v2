---
import StructurePaddingContainer from "../components/vue/_structure/paddingContainer.vue";
import "../styles/global.css";
import Preloader from "@components/vue/Brand/Preloader.vue";
import OverlayNavbar from "@components/vue/_baseUi/overlayNavbar.vue";

interface Props {
  title: string;
  mainBgColor?: string;
  showPreloader?: boolean; // 游녣 nuevo prop
}

// Valores por defecto
const { title, mainBgColor, showPreloader = true } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/hermes-logo.svg" />
    <title>{title}</title>

    <!-- Descripci칩n general -->
    <meta
      name="description"
      content="Estudio creativo enfocado en branding, dise침o web y desarrollo visual. Hermes: evoluci칩n, estrategia, dise침o y empat칤a. Creamos marcas que enamoran a primera vista."
    />

    <!-- Open Graph -->
    <meta property="og:image" content="/og-image.jpg" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Hermes: evoluci칩n, estrategia, dise침o y empat칤a. Creamos marcas que enamoran a primera vista."
    />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Hermes: evoluci칩n, estrategia, dise침o y empat칤a. Creamos marcas que enamoran a primera vista."
    />
    <meta name="twitter:image" content="/og-image.jpg" />
  </head>

  <body>
    <div class:list={["relative", mainBgColor ? mainBgColor : "bg-black"]}>
      {showPreloader && (
        <>
          <Preloader client:only="vue" />
          <div
            id="preloader-fallback"
            class="absolute left-0 top-0 w-full h-[200vh] z-20 bg-black"
          ></div>
        </>
      )}

      <StructurePaddingContainer>
        <header>
          <OverlayNavbar client:load/>
        </header>
      </StructurePaddingContainer>

      <main class="add-texture overflow-x-hidden">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  .bg-noise {
    background-image: url("../assets/noise.svg");
    background-repeat: repeat;
    background-size: auto;
  }
</style>
