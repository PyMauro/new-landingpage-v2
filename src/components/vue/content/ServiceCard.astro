---
import { Image } from "astro:assets";
import BrandButton from "../Brand/Button.vue";

// interface Props {
//   serviceTitle: string,
//   bgColor: string,
//   image : ImageMetadata

// }


const {
  serviceTitle = "Servicio de Ejemplo",
  bgColor = "bg-neutral-100",
  image
} = Astro.props;

// Función de redirección
const redirectTo = (path: string) => window.location.href = path;
---

<article data-animate="from-bottom" class={`w-full relative add-texture overflow-hidden h-fit flex flex-col gap-4 lg:flex-row rounded-3xl p-3 ${bgColor}`}>
    <Image
      loading="lazy"
      widths={[320, 640, 855, 1200]}
      src={image}
      alt={`Portada de ${serviceTitle}`}
      class="w-full h-64 max-w-none lg:max-w-3/4 aspect-video rounded-xl object-cover"
    />

  <div class="flex flex-col gap-4 sm:gap-2 justify-center items-start w-full max-w-none md:max-w-1/3">
    <h3 class={`font-semibold font-heading ${bgColor === 'bg-stone-950' ? 'text-white' : 'text-stone-800'}`}>
      {serviceTitle}
    </h3>

    <!-- BrandButton Vue como isla -->
    <BrandButton
      client:load
      class="w-full md:w-fit"
      text="Conocer Servicio"
      bg-color="bg-stone-200"
      onClick={() => redirectTo('/404')}
    />
  </div>
</article>
