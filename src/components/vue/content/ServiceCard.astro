---
import { Image } from "astro:assets";
import BrandButton from "../Brand/Button.vue";

// interface Props {
//   serviceTitle: string,
//   bgColor: string,
//   image : ImageMetadata

// }


const {
  serviceTitle = "Servicio de Ejemplo",
  serviceDescription = "Lorem Isum",
  serviceDescriptionBold = "Lorem Isum",
  bgColor = "bg-neutral-100",
  btnBgColor = 'bg-amber-300',
  image
} = Astro.props;

// Función de redirección
const redirectTo = (path: string) => window.location.href = path;
---

<article data-animate="from-bottom" class={`w-full relative card-shadow add-texture overflow-hidden h-fit flex flex-col gap-4 lg:flex-row-reverse rounded-3xl p-1 ${bgColor}`}>
    <Image
      loading="lazy"
      widths={[320, 640, 855, 1200,1400]}
      src={image}
      alt={`Portada de ${serviceTitle}`}
      class="w-full md:max-w-3/5 h-full rounded-[20px] overflow-hidden object-contain"
    />

  <div class="flex flex-col gap-4 sm:gap-2 justify-center px-4 py-2 items-start w-full ">
    <h3 class={`font-semibold text-balance font-heading ${bgColor === 'bg-stone-950' ? 'text-white' : 'text-stone-800'}`}>
      {serviceTitle}
    </h3>
    <div class="flex flex-col gap-2">
      <p class="text-neutral-700">{serviceDescription}</p>
      { serviceDescriptionBold !== "Lorem Isum" ? <p class="text-neutral-700 font-semibold">{serviceDescriptionBold}</p> : '' }

    </div>
    <!-- BrandButton Vue como isla -->
    <BrandButton
      client:load
      class="w-full md:w-fit"
      text="Consultar →"
      bg-color={btnBgColor}
      href="#contactSection"
    />
  </div>

</article>
