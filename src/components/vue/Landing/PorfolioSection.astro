---
import StructureBasicBlock from "../_structure/basicBlock.vue";
import StructurePaddingContainer from "../_structure/paddingContainer.vue";
import PortafolioCard from "@components/vue/content/PorfolioCard.astro";
import sinGlu from '@assets/portfolio/singlu.webp'
import femenina from '@assets/portfolio/femenina.webp'
import rominaMacri from '@assets/portfolio/romina-macri.webp'
import clickInformativo from '@assets/portfolio/clickInformativo.webp'
import Badge from "../_baseUi/badge.vue";

const animatedEntry = true
const cards = [
  {
    title: 'SinGlu, comida casera, sin gluten y 100% organica.',
    serviceType: 'Identidad Visual',
    urlImage: sinGlu
  },
  {
    title: 'Femenina, un negocio amado por sus clientes.',
    serviceType: 'Branding, Desarollo Web, Consultoria',
    urlImage: femenina
  },
  {
    title: 'Romina Macri, expandiendo la cardiolog√≠a al publico.',
    serviceType: 'Identidad Visual, Gestion de Redes',
    urlImage: rominaMacri
  },
  {
    title: 'Click Informativo, la voz de la sociedad.',
    serviceType: 'Identidad Visual, Desarollo Web',
    urlImage: clickInformativo
  }
];
---

<section id="portfolioSection" class="w-full">
  <StructureBasicBlock extraBorders="bottom-border" class="bg-black rounded-3xl">
    <StructurePaddingContainer padding="padding">
      <StructureBasicBlock extraBorders="no-borders" padding="padding">
        <div class="w-full flex justify-center items-center gap-4 flex-col">
          <Badge bgColor="bg-black">
            Conoce nuestro Trabajo
          </Badge>
          <h2 text-split words-slide-up class="font-semibold text-neutral-300 font-heading w-full md:w-1/2 text-center">
            NUESTRO TRABAJO DELATA <span class="text-amber-300">NUESTRA CALIDAD</span>
          </h2>
          <p class="text-neutral-500 md:w-1/2 text-center">Desde identidades visuales, branding y Desarrollo web. Lo que tengas en mente, te lo hacemos realidad. No hay limites.</p>
        </div>
      </StructureBasicBlock>

      <StructureBasicBlock padding="padding">
        <div class="w-full  flex flex-col items-center ">
          <div class="w-full gap-2 md:max-w-2/3  flex flex-col">
            {cards.map(card => (
              <div>
                <PortafolioCard
                
                  title={card.title}
                  serviceType={card.serviceType}
                  urlImage={card.urlImage}
                />
              </div>
            ))}
          </div>
        </div>
      </StructureBasicBlock>
    </StructurePaddingContainer>
  </StructureBasicBlock>
</section>
<script >
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
  
  function init() {
    //@ts-ignore
    import('@animations/initAnimations.js').then(module => {
      module.initAllAnimations();
    });
  }
</script>