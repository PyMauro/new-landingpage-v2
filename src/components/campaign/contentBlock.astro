---
interface Props {
  blocktitle: string;
  basepadding?: boolean;
  nocenter?: boolean;
  darkMode?: boolean;
}

const { blocktitle,basepadding,nocenter,darkMode } = Astro.props;
---



<div class:list={[{'p-4 md:px-8':basepadding},{'bg-[#121113] text-white':darkMode === true},{'bg-white text-[#121113] border-3 border-[#121113]':darkMode === false}, ["relative",'w-full', "h-full", "rounded-4xl", 'my-4']]}>
    <div
  class="w-1/3 text-black bg-white rounded-4xl z-20 border-[3px] border-[#121113] flex justify-center absolute -top-4 left-1/3 text-[18px] font-body font-medium"
>
  {blocktitle}
</div>
  <div class="min-h-screen md:text-balance flex justify-center" :class:list={[{'items-center':!nocenter}]}>
    <slot />
  </div>
</div>
