---
import { sanity } from "../../lib/sanityClient";
import { projectBySlugQuery } from "../../lib/queries";
import { PortableText } from "astro-portabletext";
import SanityLayout from "src/layouts/sanityLayout.astro";
import BrandFooter from "@components/vue/_baseUi/BrandFooter.astro";
import ContactSection from "@components/vue/Landing/ContactSection.astro";
//@ts-ignore
import StructureBasicBlock from "@components/vue/_structure/basicBlock.vue";
import BrandButton from "@components/vue/Brand/Button.vue";

// Obtener rutas estáticas
export async function getStaticPaths() {
  const slugs = await sanity.fetch(`*[_type == "project"]{ "slug": slug.current }`);
  return slugs.map((p) => ({ params: { slug: p.slug } }));
}

const { slug } = Astro.params;
const project = await sanity.fetch(projectBySlugQuery, { slug });
---

<SanityLayout title={project.title} showPreloader={true}>
<StructureBasicBlock extraBorders="bottom-border" padding="no-padding">
  <StructureBasicBlock extraBorders="bottom-border" padding="padding">
{!project ? (
  <div class="flex justify-center items-center h-screen text-neutral-400">
    <p>No se encontró el proyecto solicitado.</p>
  </div>
) : (
  <section id="portfolio-detail" class="w-full">
    <StructureBasicBlock extraBorders="bottom-border" padding="no-padding">
      <div class="w-full flex flex-col relative justify-center items-center gap-4">
        <div class="py-2">
{/*         
        <Badge bgColor="bg-black" data-animate="from-bottom">
          Proyecto Destacado
        </Badge> */}
        </div>
        <div class="absolute w-full h-full top-0">
          {project.coverImage && (
        <img
          src={project.coverImage}
          alt={project.title}
          class="rounded-2xl w-full h-full max-w-6xl mx-auto object-cover"
          loading="lazy"
        />
      )}
        <div class="absolute bottom-0 w-full h-1/2 bg-linear-to-t from-black to-black/0"></div>
        </div>
        <div class="mt-72">

        <h1 text-split words-slide-up class="font-semibold text-neutral-300 font-heading text-center text-balance ">
          <span class="text-amber-300">{project.category.title}:</span> {project.title}
        </h1>
        </div>
        
        <div class="border py-4 rounded-2xl bg-black/70 z-10 border-gray-300 w-full items-center  md:w-2/3 flex flex-col md:flex-row justify-between px-16">
        {project.client && (
          <p class="text-neutral-500 text-center text-balance w-full">
            <strong class="text-amber-300">Cliente:</strong> {project.client}
          </p>
        )}
        <div class="w-0.5 h-full bg-gray-600 hidden md:block">|</div>
        {project.year && (
          <p class="text-neutral-500 text-center text-balance w-full">
            <strong class="text-amber-300">Año:</strong> {project.year}
          </p>
        )}
                <div class="w-0.5 h-full bg-gray-600 hidden md:block">|</div>
        {project.category?.title && (
          <p class="text-neutral-500 text-center text-balance w-full">
            <strong class="text-amber-300">Categoría:</strong> {project.category.title}
          </p>
        )}
        </div>
      </div>
    </StructureBasicBlock>

    <StructureBasicBlock extraBorders="no-borders" padding="padding">
      <article class="prose prose-invert max-w-4xl mx-auto text-neutral-300 text-lg leading-relaxed">
        <PortableText value={project.content} />
      </article>
    </StructureBasicBlock>

    {project.gallery && project.gallery.length > 0 && (
      <StructureBasicBlock extraBorders="top-border" padding="padding">
        <h2 class="text-center text-neutral-300 font-semibold mb-8">Galería</h2>
        <div class="flex flex-col gap-4 max-w-6xl mx-auto">
          {project.gallery.map((item) =>
            item._type === "image" ? (
              <img
                data-animate="from-bottom"
                src={item.url}
                alt="Galería"
                class="rounded-xl md:aspect-video w-full object-cover shadow-lg hover:scale-[1.02] transition-transform duration-300"
              />
            ) : (
              <video
                src={item.url}
                controls
                class="rounded-xl w-full shadow-lg"
              />
            )
          )}
        </div>
      </StructureBasicBlock>
    )}

    <article class="CTA w-full h-full py-8" data-animate="from-bottom">
      <div class="bg-neutral-100 card-shadow  gap-4 px-8 py-24 w-full rounded-2xl flex flex-col justify-center items-center">
        <h3 class="text-center text-balance leading-[0.9] text-4xl tracking-tight md:text-5xl font-body font-bold text-neutral-900">
          ¿Querés una transformación similar?
        </h3>
        <p class="text-center text-balance text-neutral-700 max-w-2xl">
          Si este proyecto te inspiró, <strong>podemos ayudarte a alcanzar resultados visuales igual de potentes.</strong>
          Contanos qué necesitás y te orientamos gratis.
        </p>
        <BrandButton
          client:load
          class="w-full md:w-fit"
          text="Agendar Consulta →"
          bg-color="bg-amber-300"
          id="project-cta-btn"
          href="#contactSection"
        />
      </div>
    </article>
  </section>
)}
  </StructureBasicBlock>
</StructureBasicBlock >
    <!-- Contact Section -->
    <ContactSection/>
    
      <!-- Brand Footer -->
      <BrandFooter/>
</SanityLayout>
