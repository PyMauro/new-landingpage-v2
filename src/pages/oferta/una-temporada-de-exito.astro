  <script>
    import gsap from 'gsap'
    // Carga diferida de animaciones generales (sin tocar)
  if ('requestIdleCallback' in window) {
    requestIdleCallback(() =>
      import('@animations/initAnimations.js').then(m => m.initAllAnimations())
    );
  } else {
    setTimeout(() =>
      import('@animations/initAnimations.js').then(m => m.initAllAnimations()), 500
    );
  }

  // ‚ö° Escuchar el evento del preloader
  const handlePreloaderEnd = () => {
    setTimeout(
      requestAnimationFrame(() => {
        const heroContent = document.querySelector('.hero-content-block');
        const mask = document.querySelector('.hero-mask');
  
        const tl = gsap.timeline();
  
        // 1Ô∏è‚É£ Portada (mask-portada) aparece
        tl.from(".mask-portada", { 
          scale: 2, 
          opacity: 0,
          duration: 1.6,
          ease: "power3.out"
        })
  
        // 2Ô∏è‚É£ Cierre de m√°scara
        .to(mask, { 
          clipPath: "polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%)",
          scale: 0.95,
          duration: 1.4,
          ease: "power4.out"
        }, "-=0.6")
  
        // 3Ô∏è‚É£ Entrada del contenido (texto y botones)
        .from(heroContent, { 
          opacity: 0, 
          y: 80, 
          scale: 0.95, 
          duration: 1.4, 
          ease: "power2.out" 
        }, "-=1");
      })
    ,400)
  };

  // Si el preloader ya termin√≥ antes del mount (por recarga), disparamos igual
  if (window.preloaderFinished) {
    handlePreloaderEnd();
  } else {
    // Escuchamos el evento global
    window.addEventListener('finishedPreloader', handlePreloaderEnd, { once: true });
  }
  </script>
  <script>
     window.addEventListener("finishedPreloader", async () => {
        const { initAllAnimations } = await import(
        //@ts-ignore
          "@animations/initAnimations.js"
        );
        initAllAnimations();
      });
    </script>
